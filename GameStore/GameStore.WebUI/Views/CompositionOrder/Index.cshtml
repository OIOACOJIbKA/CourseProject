@model IEnumerable<GameStore.Domain.Entities.CompositionOrder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">Состав заказа</div>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>ID</th>
            <th>Заказ №</th>
            <th>ID Игры</th>
            <th>Количество</th>            
            <th style="min-width: 150px"></th>
        </tr>
        @if (Model == null || Model.Count() == 0)
        {
            <tr>
                <td colspan="6" class="text-center">Нет заказов</td>
            </tr>
        }
        else
        {
            foreach (var compositionOrder in Model)
            {
                <tr>
                    @*<td>@Html.ActionLink(order.OrderID.ToString(), "Edit", new { order.OrderID })</td>*@
                    <td>@compositionOrder.CompositionOrderID</td>
                    <td>@compositionOrder.OrderID</td>
                    <td>@compositionOrder.GameID</td>
                    <td>@compositionOrder.Count</td>                    
                    @*<td>
                        @using (Html.BeginForm("Delete", "Order", new { compositionOrder.OrderID }))
                        {
                            @Html.ActionLink("Изменить", "Edit", new { compositionOrder.OrderID },
                                new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 10px" })
                            <button class="btn btn-danger btn-xs" type="submit">Удалить</button>
                        }
                    </td>*@
                </tr>
            }
        }
    </table>
</div>

