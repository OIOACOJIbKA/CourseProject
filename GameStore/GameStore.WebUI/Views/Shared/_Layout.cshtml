<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">
            <span class="hidden-xs">GameStore</span>
        </a>
        <table class="navbar navbar-inverse">
            <tr>
                <td>
                    @using (Html.BeginForm("List", "Game"))
                    {
                        <input type="submit"
                               class="btn btn-success btn-lg"
                               value="Главная" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Index", "Admin"))
                    {
                        <input type="submit"
                               class="btn btn-success btn-lg"
                               value="Админ" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Users", "Admin"))
                    {
                        <input type="submit"
                               class="btn btn-success btn-lg"
                               value="Пользователи" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Index", "Order"))
                    {
                        <input type="submit"
                               class="btn btn-success btn-lg"
                               value="Заказы" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Index", "Roleadmin"))
                    {
                        <input type="submit"
                               class="btn btn-success btn-lg"
                               value="Роли" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Index", "SoldGames"))
                    {
                        <input type="submit"
                               class="btn btn-success btn-lg"
                               value="Продажи" />
                    }
                </td>
                @if (PageContext.Page.User.Identity.Name == "")
                {
                    <td class="btn btn-success btn-lg">@Html.ActionLink("Войти", "Login", "Account")</td>
                }
                <td>
                    @if (PageContext.Page.User.Identity.Name != "")
                    {
                        <div class="navbar-text navbar-right">
                            <b class="hidden-xs"> Здравствуйте @PageContext.Page.User.Identity.Name!</b>
                        </div>
                    }
                </td>
                <td>
                    @if (PageContext.Page.User.Identity.Name != "")
                    {
                        using (Html.BeginForm("Logout", "Account"))
                        {
                            <input type="submit"
                                   class="btn btn-success btn-lg"
                                   value="Выйти" />
                        }
                    }
                </td>
                <td>@Html.Action("Summary", "Cart")</td>
            </tr>
        </table>
    </div>

    <div class="visible-xs">
        @Html.Action("Menu", "Nav", new { horizontalNav = true })
    </div>

    <div class="row panel">
        <div id="categories" class="col-sm-3 hidden-xs">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-xs-12 col-sm-8">
            @RenderBody()
        </div>
    </div>
</body>
</html>
