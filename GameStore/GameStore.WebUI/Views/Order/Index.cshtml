@using GameStore.WebUI.Models
@model IEnumerable<GameStore.Domain.Entities.Order>

@{
    ViewBag.Title = "Заказы";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading">Заказы</div>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>ID</th>
            <th>Адрес</th>
            <th>Город</th>
            <th>Страна</th>
            <th>Статус</th>
            <th>Дата заказа</th>
            <th>Цена</th>
            <th style="min-width: 150px"></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="6" class="text-center">Нет заказов</td>
            </tr>
        }
        else
        {
            foreach (var order in Model)
            {
            <tr>
                <td>@order.OrderID</td>
                <td>@Html.ActionLink(order.OrderID, "Edit", new { order.OrderID })</td>
                <td>@order.Adress</td>
                <td>@order.Town</td>
                <td>@order.Country</td>
                <td class="text-center">
                    @using (Html.BeginForm("Delete", "Admin"))
                    {
                        @Html.Hidden("OrderID", order.OrderID)
                        <input type="submit"
                               class="btn btn-default btn-xs"
                               value="Удалить" />
                    }
                </td>
                <td>
                    @*@Html.DropDownList("status", "Select Style")*@
                    @switch (order.Status)
                    {
                        case 0:@:На рассмотрении
                            break;
                        case 1:@:Отправлен
                            break;
                        case 2:@:Получен
                            break;
                        default:@:Ошибка
                            break;
                    }
                    @*@if (order.Status == 0)
            {
                @:На рассмотрении
            }*@
                </td>
                <td>@order.Date</td>
                <td>@order.Price</td>
                <td>
                    <div class="text-center">
                        <input class="btn btn-primary" type="submit" value="Обработать заказ" />
                    </div>
                </td>
            </tr>
            }
        }
    </table>
</div>
