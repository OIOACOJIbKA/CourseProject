@using GameStore.WebUI.Models
@using GameStore.Domain.Entities
@model IEnumerable<Order>

@{
    ViewBag.Title = "Заказы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading">Заказы</div>
    <table class="table table-striped">
        <tr>
            <th>Адрес</th>
            <th>Город</th>
            <th>Страна</th>
            <th>Статус</th>
            <th>Дата заказа</th>
            <th>Цена</th>
            <th style="min-width: 150px"></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="6" class="text-center">Нет заказов</td>
            </tr>
        }
        else
        {
            foreach (Order order in Model)
            {
                <tr>
                    <td>@order.Adress</td>
                    <td>@order.Town</td>
                    <td>@order.Country</td>
                    <td>
                        @*@Html.DropDownList("status", "Select Style")*@
                        @switch (order.Status)
                        {
                            case 0:@:На рассмотрении
                                break;
                            case 1:@:Отправлен
                                break;
                            case 2:@:Получен
                                break;
                            default:@:Ошибка
                                break;
                        }
                        @*@if (order.Status == 0)
                            {
                                @:На рассмотрении
                            }*@
                    </td>
                    <td>@order.Date</td>
                    <td>@order.Price</td>
                    <td>
                        <div class="text-center">
                            <input class="btn btn-primary" type="submit" value="Обработать заказ" />
                        </div>
                        <div>
                            @*class="panel-footer">*@
                            @*<input type="submit" value="Сохранить" class="btn btn-primary" />*@
                            @*@Html.ActionLink("Жми здесь", "Show")*@
                        </div>
                        @*@using (Html.BeginForm("RemoveFromCart", "Cart"))
                            {
                                @Html.Hidden("GameId", line.Game.GameId)
                                @Html.HiddenFor(x => x.ReturnUrl)
                                <input class="btn btn-sm btn-warning" type="submit" value="Удалить" />
                            }*@
                    </td>
                </tr>
            }
        }
    </table>
</div>


